<?xml version="1.0" encoding="utf-8"?>
<!--
	onEnterFrom allows assignment of actions executed when entering from given panorama. for instance: in panorama
	checkerGreen onEnterFrom="checkerBlue:printGreenFromBlue,checkerRed:printGreenFromRed means that when entering 
	from panotrama checkerBlue to panorama checkerGreen, action printGreenFromBlue is executed, similar for checkerRed.
	
	http://panozona.com/wiki/SaladoPlayer:Configuration
-->
<SaladoPlayer>
	<global debug="true">
		<trace open="true"/>
	</global>
	<panoramas>
		<panorama id="checkerGreen" path="~panoramas/dz_checker_green/checker_green_f.xml" onEnterFrom="checkerBlue:printGreenFromBlue,checkerRed:printGreenFromRed">
			<image id="cg_ArrowRed" path="~hotspots/images/arrow_red.png" location="pan:-10" target="checkerRed"/>
			<image id="cg_ArrowBlue" path="~hotspots/images/arrow_blue.png" location="pan:10" target="checkerBlue"/>
		</panorama>
		<panorama id="checkerBlue" path="~panoramas/dz_checker_blue/checker_blue_f.xml" onEnterFrom="checkerGreen:printBlueFromGreen,checkerRed:printBlueFromRed">
			<image id="cb_ArrowRed" path="~hotspots/images/arrow_red.png" location="pan:-10" target="checkerRed"/>
			<image id="cb_ArrowGreen" path="~hotspots/images/arrow_green.png" location="pan:10" target="checkerGreen"/>
		</panorama>
		<panorama id="checkerRed" path="~panoramas/dz_checker_red/checker_red_f.xml" onEnterFrom="checkerGreen:printRedFromGreen,checkerBlue:printRedFromBlue">
			<image id="cr_ArrowBlue" path="~hotspots/images/arrow_blue.png" location="pan:-10" target="checkerBlue"/>
			<image id="cr_ArrowGreen" path="~hotspots/images/arrow_green.png" location="pan:10" target="checkerGreen"/>
		</panorama>
	</panoramas>
	<actions>
		<action id="printGreenFromBlue" content="SaladoPlayer.print(Welcome in green checker from blue one)"/>
		<action id="printGreenFromRed" content="SaladoPlayer.print(Welcome in green checker from red one)"/>
		<action id="printBlueFromGreen" content="SaladoPlayer.print(Welcome in blue checker from green one)"/>
		<action id="printBlueFromRed" content="SaladoPlayer.print(Welcome in blue checker from red one)"/>
		<action id="printRedFromGreen" content="SaladoPlayer.print(Welcome in red checker from green one)"/>
		<action id="printRedFromBlue" content="SaladoPlayer.print(Welcome in red checker from blue one)"/>
	</actions>
</SaladoPlayer>