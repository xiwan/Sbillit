<!--
	Changing hotspot appeariance.
	
	http://panozona.com/wiki/SaladoPlayer:Configuration
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerBlue" path="~panoramas/dz_checker_blue/checker_blue_f.xml">
			<image id="hs1" location="pan:-20,tilt:10" transform="scaleX:0.5" path="~hotspots/images/arrow_green.png"/>
			<image id="hs2" location="pan:0,tilt:10" transform="scaleY:0.5" path="~hotspots/images/arrow_green.png"/>
			<image id="hs3" location="pan:20,tilt:10" transform="scaleZ:0.5" path="~hotspots/images/arrow_green.png"/>
			<image id="hs4" location="pan:-20,tilt:-10" transform="rotationX:45" path="~hotspots/images/arrow_green.png"/>
			<image id="hs5" location="pan:0,tilt:-10" transform="rotationY:45" path="~hotspots/images/arrow_green.png"/>
			<image id="hs6" location="pan:20,tilt:-10" transform="rotationZ:45" path="~hotspots/images/arrow_green.png"/>
		</panorama>
	</panoramas>
</SaladoPlayer>