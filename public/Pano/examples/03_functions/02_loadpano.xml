<?xml version="1.0" encoding="utf-8" ?>
<!--
	Clicking on hotspots results in loading new panoramas. You can either assign action to mouse event
	or use shortcut that targets hotspot to given panorama.
	
	http://panozona.com/wiki/SaladoPlayer:Exposed_functions
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerRed" path="~panoramas/dz_checker_red/checker_red_f.xml">
			<image id="cr_arrowGreen" path="~hotspots/images/arrow_green.png" location="pan:-10" mouse="onClick:loadCheckerGreen"/>
			<image id="cr_arrowBlue" path="~hotspots/images/arrow_blue.png" location="pan:10" mouse="onClick:loadCheckerBlue"/>
		</panorama>
		<panorama id="checkerGreen" path="~panoramas/dz_checker_green/checker_green_f.xml">
			<image id="cg_arrowBlue" path="~hotspots/images/arrow_blue.png" location="pan:-10" target="checkerBlue"/>
			<image id="cg_arrowRed" path="~hotspots/images/arrow_red.png" location="pan:10" target="checkerRed"/>
		</panorama>
		<panorama id="checkerBlue" path="~panoramas/dz_checker_blue/checker_blue_f.xml">
			<image id="cb_arrowGreen" path="~hotspots/images/arrow_green.png" location="pan:-10" mouse="onClick:loadCheckerGreen"/>
			<image id="cb_arrowRed" path="~hotspots/images/arrow_red.png" location="pan:10" mouse="onClick:loadCheckerRed"/>
		</panorama>
	</panoramas>
	<actions>
		<action id="loadCheckerRed" content="SaladoPlayer.loadPano(checkerRed)"/>
		<action id="loadCheckerBlue" content="SaladoPlayer.loadPano(checkerBlue)"/>
		<action id="loadCheckerGreen" content="SaladoPlayer.loadPano(checkerGreen)"/>
	</actions>
</SaladoPlayer>