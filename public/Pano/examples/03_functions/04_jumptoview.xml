<?xml version="1.0" encoding="utf-8" ?>
<!-- 
	jumpToView takes 3 arguments: pan, tilt and field of view. Any of these arguments can be NaN (Not a Number)
	which means that new view will take current camera value. For instance: When camera is looking -90 pan (East)
	calling jumpToView(NaN,30,120) will result in -90 pan, 30 tilt and 120 field of view.
	
	http://panozona.com/wiki/SaladoPlayer:Exposed_functions
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerGreen" path="~panoramas/dz_checker_green/checker_green_f.xml">
			<image id="cg_arrowBlue" path="~hotspots/images/arrow_blue.png" location="pan:0" mouse="onClick:jumpToArrowYellow"/>
			<image id="cg_arrowGreen" path="~hotspots/images/arrow_green.png" location="pan:180" mouse="onClick:jumpToArrowRed"/>
			<image id="cg_arrowRed" path="~hotspots/images/arrow_red.png" location="tilt:-85" mouse="onClick:jumpToArrowBlue"/>
			<image id="cg_arrowYellow" path="~hotspots/images/arrow_yellow.png" location="tilt:85" mouse="onClick:jumpToArrowGreen"/>
		</panorama>
	</panoramas>
	<modules>
		<ViewFinder path="~modules/ViewFinder-1.3.swf"/>
	</modules>
	<actions>
		<action id="jumpToArrowYellow" content="SaladoPlayer.jumpToView(NaN,85,30)"/>
		<action id="jumpToArrowRed" content="SaladoPlayer.jumpToView(NaN,-85,90)"/>
		<action id="jumpToArrowBlue" content="SaladoPlayer.jumpToView(0,0,120)"/>
		<action id="jumpToArrowGreen" content="SaladoPlayer.jumpToView(180,0,NaN)"/>
	</actions>
</SaladoPlayer>