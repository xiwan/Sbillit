<?xml version="1.0" encoding="utf-8"?>
<!--
	Point to image containig bitmaps grid with bitmaps for all buttons. You can choose from many such grids or you
	can easily create your own. Choose which ones of preconfigured standard buttons to display. Changing order of
	button nodes results in changing order in which buttons are displayed.
	
	http://panozona.com/wiki/Module:ButtonBar
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerYellow" path="~panoramas/dz_checker_yellow/checker_yellow_f.xml"/>
	</panoramas>
	<modules>
		<ButtonBar path="~modules/buttonbar/ButtonBar-1.3.swf">
			<buttons path="~modules/buttonbar/images/buttons_dark_40x40.png">
				<button name="left"/>
				<button name="right"/>
				<button name="down"/>
				<button name="up"/>
				<button name="out"/>
				<button name="in"/>
				<button name="drag"/>
				<button name="autorotation"/>
				<button name="fullscreen"/>
			</buttons>
		</ButtonBar>
	</modules>
</SaladoPlayer>