<?xml version="1.0" encoding="utf-8"?>
<!--
	Use module to place images inside panorama window. You can use images or standalone swf files.
	When there are no mouse events assigned, button is transparent to mouse movement.
	
	http://panozona.com/wiki/Module:ImageButton
-->
<SaladoPlayer>
	<global debug="true">
		<trace open="true"/>
	</global>
	<panoramas>
		<panorama id="checkerGreen" path="~panoramas/dz_checker_green/checker_green_f.xml"/>
	</panoramas>
	<modules>
		<ImageButton path="~modules/ImageButton-1.3.swf">
			<button id="logo" path="~media/images/misc/panozona_logo.png" action="logoOnClick"/>
		</ImageButton>
	</modules>
	<actions>
		<action id="logoOnClick" content="SaladoPlayer.print(logo got clicked)"/>
	</actions>
</SaladoPlayer>