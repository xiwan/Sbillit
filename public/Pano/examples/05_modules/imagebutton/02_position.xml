<?xml version="1.0" encoding="utf-8"?>
<!--
	Position and align buttons inside panorama window. You can also set custom transparency for each image.
	
	http://panozona.com/wiki/Module:ImageButton
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerGreen" path="~panoramas/dz_checker_green/checker_green_f.xml"/>
	</panoramas>
	<modules>
		<ImageButton path="~modules/ImageButton-1.3.swf">
			<button id="logo1" path="~media/images/misc/panozona_logo.png">
				<window move="horizontal:30,vertical:30" alpha="0.5"/>
			</button>
			<button id="logo2" path="~media/images/misc/panozona_logo.png">
				<window align="vertical:middle" move="horizontal:30,vertical:0"/>
			</button>
			<button id="logo3" path="~media/images/misc/panozona_logo.png">
				<window align="horizontal:right,vertical:bottom" move="horizontal:-30,vertical:-60"/>
			</button>
		</ImageButton>
	</modules>
</SaladoPlayer>